---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="site-header">
  <div class="nav-shell">
    <a class="brand" href="/">
      <span class="brand-badge">ND</span>
      <span class="brand-text">{SITE_TITLE}</span>
    </a>
    <nav class="nav-links" aria-label="Navigation principale">
      <HeaderLink href="/" class="nav-link">Home</HeaderLink>
      <HeaderLink href="/work" class="nav-link">Works</HeaderLink>
      <HeaderLink href="/blog" class="nav-link">Blog</HeaderLink>
      <HeaderLink href="/about" class="nav-link">About</HeaderLink>
    </nav>
    <div class="nav-cta">
      <a class="button-ghost nav-contact" href="mailto:contact@nathandejean.fr">
        Let's talk
        <span aria-hidden="true">â†—</span>
      </a>
    </div>
  </div>
</header>
<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 4;
    padding: clamp(1.2rem, 3vw, 1.8rem) clamp(1.4rem, 4vw, 3rem);
    transition: padding 0.35s ease, backdrop-filter 0.35s ease, background 0.35s ease, border-color 0.35s ease;
    backdrop-filter: blur(20px);
    background: rgba(5, 5, 17, 0.5);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .is-scrolled .site-header {
    padding-top: clamp(0.75rem, 2vw, 1.1rem);
    padding-bottom: clamp(0.75rem, 2vw, 1.1rem);
    background: rgba(5, 5, 17, 0.8);
    border-bottom-color: rgba(108, 243, 255, 0.25);
  }

  .nav-shell {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: clamp(1.2rem, 4vw, 3rem);
    position: relative;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.85rem;
    color: var(--color-text);
    text-transform: uppercase;
    font-size: 0.95rem;
    letter-spacing: 0.32em;
    font-weight: 600;
    background: none;
  }

  .brand:hover {
    color: var(--color-primary);
  }

  .brand-text {
    position: relative;
    display: inline-block;
    padding-bottom: 0.35rem;
  }

  .brand-text::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -0.45rem;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, rgba(108, 243, 255, 0), rgba(108, 243, 255, 0.8), rgba(167, 114, 255, 0));
    transform: scaleX(0);
    transform-origin: 50% 50%;
    transition: transform 0.3s ease;
  }

  .brand:hover .brand-text::after {
    transform: scaleX(1);
  }

  .brand-badge {
    display: grid;
    place-items: center;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(108, 243, 255, 0.65), rgba(167, 114, 255, 0.65));
    color: #050511;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.08em;
    box-shadow: 0 12px 30px rgba(108, 243, 255, 0.35);
    transition: transform 0.35s ease;
  }

  .site-header:hover .brand-badge {
    transform: rotate(-6deg) scale(1.05);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: clamp(1rem, 3vw, 2rem);
  }

  .nav-link {
    position: relative;
    padding: 0.35rem 0;
    font-size: 0.95rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(244, 247, 255, 0.82);
    transition: color 0.25s ease;
    background: none;
  }

  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -0.45rem;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, rgba(108, 243, 255, 0), rgba(108, 243, 255, 0.8), rgba(167, 114, 255, 0));
    transform: scaleX(0);
    transform-origin: 50% 50%;
    transition: transform 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: var(--color-text);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    transform: scaleX(1);
  }

  .nav-cta {
    display: flex;
    align-items: center;
  }

  .nav-contact {
    padding-inline: clamp(1.1rem, 2vw, 1.6rem);
    height: 48px;
  }

  @media (max-width: 960px) {
    .nav-shell {
      gap: 1.25rem;
    }

    .nav-links {
      gap: 1rem;
    }

    .nav-cta {
      display: none;
    }
  }

  @media (max-width: 720px) {
    .nav-shell {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .nav-links {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>